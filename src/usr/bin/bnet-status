#!/bin/bash

# BlueNet VPN Status Script

# --- Colors for Output ---
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
BLUE='\033[0;34m'
NC='\033[0m'

# --- Functions ---

# Function to check for errors (primarily for unexpected failures)
check_error() {
  if [[ $? -ne 0 ]]; then
    echo -e "${RED}Error: $1. Exiting.${NC}"
    exit 1
  fi
}

# --- Main Script Logic ---

echo -e "${BLUE}--- Checking BlueNet VPN Status ---${NC}"

# Elevate to sudo if not already root
if [ "$(id -u)" -ne 0 ]; then
    echo -e "${YELLOW}This script often requires root privileges for full status details. Attempting to elevate...${NC}"
    sudo -v
    check_error "Failed to gain sudo privileges. Some status checks might be limited."
fi

# Check if NetBird client is installed
if ! command -v netbird &> /dev/null; then
    echo -e "${RED}Error: BlueNet VPN (netbird client) is not found.${NC}"
    echo "Please ensure it's installed by running 'sudo ./bnet-install'."
    exit 1
fi

echo -e "\n${BLUE}--- NetBird Service Status ---${NC}"
# Check the systemd service status
SERVICE_STATUS=$(sudo systemctl is-active netbird.service 2>/dev/null)
if [ "$SERVICE_STATUS" == "active" ]; then
    echo -e "${GREEN}NetBird service is active (running).${NC}"
else
    echo -e "${YELLOW}NetBird service is inactive or not running (Status: $SERVICE_STATUS).${NC}"
    echo "You might need to start it with: sudo netbird service start"
fi

echo -e "\n${BLUE}--- BlueNet VPN Connection Status ---${NC}"
# Get detailed NetBird connection status
sudo netbird status

# Check the exit code of netbird status to give a general summary
if [ $? -eq 0 ]; then
    echo -e "${GREEN}Overall: BlueNet VPN client seems to be running and connected.${NC}"
else
    echo -e "${RED}Overall: BlueNet VPN client might be experiencing issues or is not connected.${NC}"
    echo "Please review the output above for details."
fi

echo -e "\n${BLUE}--- BlueNet VPN Status Check Finished ---${NC}"