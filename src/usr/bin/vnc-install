#!/bin/bash

if ! command -v x11vnc &> /dev/null
then
    read -p "x11vnc could not be found. Do you want to install it? (Y/n) " response
    response=${response:-Y}
    if [[ "$response" =~ ^[Yy]$ ]]; then
        sudo apt-get update
        sudo apt-get install -y x11vnc
        echo "To enable vnc please run 'vnc-enable' command."
    else
        echo "x11vnc is required for VNC functionality. Exiting."
        exit 1
    fi
else
    echo "x11vnc is already installed."
    echo "To enable vnc please run 'vnc-enable' command."
fi